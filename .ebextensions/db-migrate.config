container_commands:
  01_makemigrations:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py makemigrations --noinput"
    leader_only: true
  02_migrate:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py migrate"
    leader_only: true
  03_metamodel:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py update_config"
    leader_only: true
  04_fakedata:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py fake_data"
    leader_only: true
  05_worker:
    command: "source /var/app/venv/*/bin/activate && nohup python3 manage.py worker &"
    leader_only: true
option_settings:
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: ERP-Template.settings